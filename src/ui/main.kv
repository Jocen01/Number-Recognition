<Main>:   
    orientation:'horizontal'
    
    BoxLayout:
        id: left
        orientation:'vertical'
        Button:
            text:"train"
        Button:
            text:"load"
        Button:
            text:"save"
        TextInput:
            multiline: False
            hint_text: 'Enter text here'

    BoxLayout:
        id: middle
        orientation:'vertical'
        size_hint: None,1.
        width: "250dp"
        
        DrawingWindow:
            size_hint: None,None
            size: "250dp","250dp"
            id: drawWindow

        Button:
            on_press: root.guess(drawWindow.get_image_array((28,280)))
            text:"Guess"
            
        Label:
            id: guess
            text: "-"

    BoxLayout:
        id: right
        orientation:'vertical'
        Button:
            text:"clear"
            on_press: drawWindow.ids.drawCanvas.clear()
        
        Button:
            text:"exit"
            on_press: exit()


<DrawingWindow>:
    DrawingWidget:
        id: drawCanvas
        canvas:
            Line:
                # this is the outline and can be removed if there is a 
                # on build function wich can call outline()
                id: outline
                points: (self.pos[0],self.pos[1],self.pos[0]+self.size[0],self.pos[1],self.pos[0]+self.size[0],self.pos[1]+self.size[1],self.pos[0],self.pos[1]+self.size[1],self.pos[0],self.pos[1])
                width: 2
                
